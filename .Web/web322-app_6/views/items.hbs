<div class="row">
  <div class="col-md-12">
    <h2>Items <a href="/items/add" class="btn btn-success pull-right">Add Item</a></h2>
    <hr />
    {{#if items}}
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>Item ID</th>
              <th>Title</th>
              <th>Price</th>
              <th>Category</th>
              <th>Published</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#each items}}
              <tr>
                <td><a href="/items/{{this.id}}">{{this.id}}</a></td>
                <td><a href="/items/{{this.id}}">{{this.title}}</a></td>
                <td>{{this.price}}</td>
                <td>{{this.category}}</td>
                <td>{{this.published}}</td>
                <td><a href="/items/delete/{{this.id}}" class="btn btn-danger">Remove</a></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
      </div>
    {{/if}}
  </div>
</div>
