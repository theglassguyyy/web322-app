<div class="row">
  <div class="col-md-12">
    <h2>
      Items
      <a href="/items/add" class="btn btn-success float-end">Add Item</a>
    </h2>
    <hr />
    {{#if items}}
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Item ID</th>
              <th>Title</th>
              <th>Post Date</th>
              <th>Price</th>
              <th>Category</th>
              <th>Published</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each items}}
              <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.postDate}}</td>
                <td>${{this.price}}</td>
                <td>
                  <a href="/items?category={{this.category}}">{{this.category}}</a>
                </td>
                <td>
                  {{#if this.published}}Yes{{else}}No{{/if}}
                </td>
                <td>
                  <!-- Delete Button -->
                  <a 
                    href="/items/delete/{{this.id}}" 
                    class="btn btn-danger btn-sm"
                    onclick="return confirm('Are you sure you want to delete this item?');"
                  >
                    Delete
                  </a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="text-center">
        <p class="text-muted">No items available. Please add an item.</p>
      </div>
    {{/if}}
  </div>
  <div class="col-md-12 text-center mt-3">
    <strong>{{message}}</strong>
  </div>
</div>
