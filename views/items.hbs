<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
        <hr />
        
        <!-- Check if there are items -->
        {{#if items.length}}
            <!-- Create a responsive table -->
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item ID</th>
                            <th>Title</th>
                            <th>Post Date</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Published</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each items}}
                            <tr>
                                <td>{{this.id}}</td>
                                <td>{{this.title}}</td>
                                <td>{{this.postDate}}</td>
                                <td>${{this.price}}</td>
                                <td>
                                    <!-- Make Category ID clickable, redirecting to filter items by category -->
                                    <a href="/items?category={{this.category}}">{{this.category}}</a>
                                </td>
                                <td>{{this.published}}</td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        {{else}}
            <!-- Display message if no items are available -->
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/if}}
    </div>
</div>
